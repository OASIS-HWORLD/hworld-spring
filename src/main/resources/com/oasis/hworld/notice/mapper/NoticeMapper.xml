<mapper namespace="com.oasis.hworld.notice.mapper.NoticeMapper">

    <!-- 공지사항 목록 페이지네이션 조회 -->
    <select id="selectNoticeWithPage">
        SELECT
            notice_id,
            title,
            category,
            created_at
        FROM
            NOTICE
        <if test="category != 0">
            WHERE
            category = #{category}
        </if>
        ORDER BY
            created_at DESC
        OFFSET (#{page}-1) * #{amount} ROWS
        FETCH FIRST #{amount} ROWS ONLY
    </select>

    <!-- 공지사항 상세 조회 -->
    <select id="selectNoticeByNoticeId">
        SELECT
            notice_id,
            title,
            category,
            content,
            image_url,
            created_at
        FROM
            NOTICE
        WHERE
            notice_id = #{noticeId}
    </select>
</mapper>